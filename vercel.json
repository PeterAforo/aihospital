{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd backend && npm install && npx prisma generate && cd ../api && npm install && npx prisma generate && cd ../frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "backend/prisma/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    }
  ]
}
