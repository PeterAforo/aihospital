{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm -C backend exec prisma generate && pnpm -C api exec prisma generate && pnpm -C frontend run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "pnpm install --recursive",
  "framework": "vite",
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "backend/prisma/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    }
  ]
}
