  "saas_infrastructure": {
    
    "multi_level_api_configuration": {
      "description": "3-tier API configuration: Super Admin ‚Üí Tenant ‚Üí Branch",
      
      "architecture": {
        "level_1_super_admin": {
          "role": "SaaS Provider (SmartMed)",
          "controls": [
            "Set default APIs for all tenants",
            "Provision API credentials",
            "Monitor API usage across all tenants",
            "Set API rate limits",
            "Revenue sharing (collect commission on payments)",
            "Choose whether tenants can override"
          ],
          "config_example": {
            "payment_gateway": {
              "default_provider": "Paystack",
              "super_admin_credentials": {
                "paystack_public_key": "pk_live_superadmin_xxx",
                "paystack_secret_key": "sk_live_superadmin_xxx"
              },
              "commission_rate": "2% of all transactions",
              "allow_tenant_override": true
            },
            "sms_gateway": {
              "default_provider": "Hubtel",
              "super_admin_credentials": {
                "hubtel_client_id": "superadmin_xxx",
                "sender_id": "SmartMed"
              },
              "rate": "‚Çµ0.03 per SMS (markup)",
              "allow_tenant_override": true
            },
            "email_provider": {
              "default_provider": "SendGrid",
              "credentials": {
                "sendgrid_api_key": "SG.superadmin_xxx"
              },
              "from_email": "notifications@smartmed.com",
              "allow_tenant_override": false
            }
          }
        },
        
        "level_2_tenant": {
          "role": "Hospital (Customer)",
          "controls": [
            "Use super admin APIs (default) OR",
            "Configure own APIs (if allowed)",
            "Set API preferences per module",
            "Monitor own API usage",
            "API cost tracking"
          ],
          "config_example": {
            "scenario_1_use_super_admin": {
              "payment_gateway": "Use SmartMed default (Paystack)",
              "benefit": "No setup needed, works immediately",
              "downside": "SmartMed takes 2% commission"
            },
            "scenario_2_own_credentials": {
              "payment_gateway": "Use own MTN Mobile Money account",
              "setup": {
                "provider": "MTN Mobile Money",
                "tenant_credentials": {
                  "mtn_merchant_id": "HOSPITAL123",
                  "mtn_api_key": "hospital_xxx"
                }
              },
              "benefit": "Payments go directly to hospital, no commission",
              "requirement": "Hospital has MTN merchant account"
            }
          }
        },
        
        "level_3_branch": {
          "role": "Hospital Branch",
          "controls": [
            "Use tenant's API config (default) OR",
            "Use branch-specific config (rare)",
            "Example: Main hospital uses MTN MoMo, Branch uses Vodafone Cash"
          ]
        }
      },
      
      "database_schema": {
        "api_configurations_table": {
          "columns": [
            "id",
            "config_level (super_admin, tenant, branch)",
            "config_owner_id (NULL for super_admin, tenant_id, branch_id)",
            "api_type (payment, sms, email)",
            "provider (Paystack, Hubtel, SendGrid, etc.)",
            "credentials_encrypted (JSON with API keys)",
            "is_active",
            "allow_override (boolean - can lower levels override?)",
            "created_at",
            "updated_at"
          ]
        },
        
        "api_resolution_logic": {
          "pseudocode": "
            function getAPIConfig(tenantId, branchId, apiType) {
              // 1. Check branch level
              branchConfig = findConfig(level='branch', ownerId=branchId, apiType)
              if (branchConfig && branchConfig.is_active) return branchConfig
              
              // 2. Check tenant level
              tenantConfig = findConfig(level='tenant', ownerId=tenantId, apiType)
              if (tenantConfig && tenantConfig.is_active) return tenantConfig
              
              // 3. Fall back to super admin default
