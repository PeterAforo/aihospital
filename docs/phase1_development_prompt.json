{
  "project_name": "MediCare Ghana - Hospital Management System",
  "project_type": "Multi-tenant SaaS Hospital Management System",
  "target_market": "Ghana Healthcare Sector",
  "development_phase": "Phase 1 - MVP (6 Months)",
  
  "project_overview": {
    "description": "A comprehensive, AI-powered, multi-branch hospital management system tailored for Ghana's healthcare sector with NHIS integration, mobile money payments, and offline-first capabilities.",
    "key_differentiators": [
      "NHIS claims processing and compliance",
      "Mobile money integration (MTN, Vodafone, AirtelTigo)",
      "Offline-first PWA architecture",
      "WhatsApp/SMS patient engagement",
      "Multi-tenancy for hospital chains",
      "Ghana Health Service reporting compliance"
    ]
  },

  "technology_stack": {
    "backend": {
      "framework": "Node.js with Express.js or NestJS",
      "alternative": "Python with FastAPI",
      "orm": "Prisma or TypeORM",
      "authentication": "JWT with refresh tokens",
      "api_style": "RESTful API with optional GraphQL"
    },
    "database": {
      "primary": "PostgreSQL 15+",
      "caching": "Redis",
      "search": "PostgreSQL Full-Text Search (Elasticsearch for Phase 2)",
      "multi_tenancy_approach": "Separate schemas per tenant in single database"
    },
    "frontend": {
      "framework": "React 18+ with TypeScript",
      "state_management": "Redux Toolkit or Zustand",
      "ui_library": "Ant Design or Material-UI",
      "forms": "React Hook Form with Yup validation",
      "data_fetching": "React Query (TanStack Query)"
    },
    "mobile": {
      "framework": "React Native with Expo",
      "offline_storage": "WatermelonDB or Realm",
      "platforms": "Android priority, iOS secondary"
    },
    "ai_ml": {
      "runtime": "Python microservice",
      "frameworks": "scikit-learn, TensorFlow Lite",
      "deployment": "Docker containers",
      "initial_models": [
        "Patient no-show prediction",
        "NHIS claim approval likelihood",
        "Appointment duration estimation"
      ]
    },
    "infrastructure": {
      "hosting": "AWS (Africa Cape Town region) or Azure",
      "cdn": "CloudFlare",
      "file_storage": "AWS S3 or MinIO",
      "deployment": "Docker + Kubernetes (or AWS ECS)",
      "ci_cd": "GitHub Actions",
      "monitoring": "Sentry for errors, Prometheus + Grafana for metrics"
    },
    "third_party_integrations": {
      "sms_gateway": "Hubtel or SMSGH",
      "mobile_money": "Hubtel Payment API or direct integrations",
      "whatsapp": "WhatsApp Business API (Twilio or official)",
      "ghana_card": "National Identification Authority API (if available)",
      "nhis": "NHIS claims portal integration"
    }
  },

  "architecture_patterns": {
    "overall": "Modular monolith with microservices for AI/ML",
    "multi_tenancy": {
      "strategy": "Separate database schemas per tenant",
      "tenant_identification": "Subdomain (hospital1.medicaresaas.com) or custom domain",
      "data_isolation": "Schema-level isolation with row-level security",
      "shared_resources": "Application code, AI models, authentication service"
    },
    "offline_first": {
      "approach": "Service Workers + IndexedDB",
      "sync_strategy": "Optimistic UI updates with background sync",
      "conflict_resolution": "Last-write-wins with conflict queue"
    },
    "security": {
      "authentication": "Multi-factor authentication (SMS-based)",
      "authorization": "Role-based access control (RBAC)",
      "data_encryption": "AES-256 for data at rest, TLS 1.3 for transit",
      "audit_logging": "Complete audit trail for all data modifications",
      "compliance": "Ghana Data Protection Act, 2012 compliance"
    }
  },

